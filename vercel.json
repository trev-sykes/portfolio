{
    "rewrites": [
        {
            "source": "/projects",
            "destination": "/index.html"
        },
        {
            "source": "/blogs",
            "destination": "/index.html"
        },
        {
            "source": "/about",
            "destination": "/index.html"
        },
        {
            "source": "/:blogName*",
            "destination": "/index.html"
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        }
    ]
}